func makeRootHttpTransport(endpoints endpoint.Endpoints) Transport {
	return &httpTransport{
		{{ range .Methods}}{{ toLowerFirst .}}:    make{{ . }}HttpTransport(endpoints.{{ . }}().Endpoint()),
	{{ end }}}
}
