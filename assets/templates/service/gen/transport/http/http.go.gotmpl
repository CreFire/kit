type Method string

const (
	GET     Method = "GET"
	PUT            = "PUT"
	POST           = "POST"
	HEAD           = "HEAD"
	PATCH          = "PATCH"
	DELETE         = "DELETE"
	OPTIONS        = "OPTIONS"
)

type MethodRoute struct {
	Name   string
	Methods []Method
	Route  string
}

type HTTP interface {
	MethodRoutes() []MethodRoute
	Options([]goKitHttp.ServerOption)
	Handler() goHttp.Handler
}

